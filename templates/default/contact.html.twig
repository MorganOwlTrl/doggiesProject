{% extends 'base.html.twig' %}
{% block title %}{{ 'navbar.contact'|trans }}{% endblock %}
{% block pageTitle %}{{ 'navbar.contact'|trans }}{% endblock %}
{% block body %}

    <div class="col-6">

    {{ form_start(form) }}
    {# On affiche une "row" de notre formulaire, c'est à dire un bloc qui va contenir le label (balise label) et le widget (ici un champ input de type text) #}
    {# On ajoute des attributs sur la div, sur le widget et sur le label #}

    {{ form_row(form.email, {
        label: {{ 'contact.mail'|trans }},
        row_attr: {
            class: 'mb-3',
        },
        attr: {
            class: 'form-control',
        },
        label_attr: {
            class: 'form-label',
        },
    }) }}

    {{ form_row(form.subject, {
        label: '{{ 'contact.subject'|trans }}',
        row_attr: {
            class: 'mb-3',
        },
        attr: {
            class: 'form-control',
        },
        label_attr: {
            class: 'form-label',
        },
    }) }}

        {{ form_row(form.dog, {
            label: '{{ 'contact.dog'|trans }}',
            row_attr: {
                class: 'mb-3',

            },
            attr: {
                class: 'form-control',

            },
            label_attr: {
                class: 'form-label',
            },
        }) }}


        {{ form_row(form.message, {
            label: '{{ 'contact.message'|trans }}',
        row_attr: {
            class: 'mb-3',
        },
        attr: {
            class: 'form-control',
        },
        label_attr: {
            class: 'form-label',
        },
    }) }}

    {# On ajoute un bouton de validation du formulaire, nous n'en avons pas mis dans notre objet TagType #}
    <button type="submit" class="btn btn-primary">{{ 'contact.send'|trans }}</button>
    {# On affiche la balise </form> et les éventuels champs qui n'aurait pas été affichés jusqu'ici #}
    {{ form_end(form) }}
    </div>
{% endblock %}