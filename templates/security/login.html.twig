{% extends 'base.html.twig' %}

{% block title %}{{ 'loginForm.login'|trans }}{% endblock %}

{% block body %}
<form method="post" class="col-md-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ 'loginForm.alreadylog'|trans }}  {{ app.user.username }}, <a class="btn btn-primary" href="{{ path('app_logout') }}">{{ 'navbar.logout'|trans }}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'loginForm.connexionTitle'|trans }}r</h1>
    <label for="inputUsername">{{ 'loginForm.username'|trans }}r</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword">{{ 'loginForm.password'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary my-3" type="submit">
        {{ 'loginForm.connexion'|trans }}
    </button>
</form>
{% endblock %}
