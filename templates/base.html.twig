<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}


    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            {% block nav %}
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('default') }}"><i class="fas fa-paw"></i> Milles et Un Toutous</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item ">
                            <a class="nav-link {% if app.request.get('_route') == 'default' %} active {% endif %}" href="{{ path('default') }}" >{{ 'navbar.home'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'annonces' %} active {% endif %}" href="{{ path('annonces') }}">{{ 'navbar.dogs'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'conditions' %} active {% endif %}" href="{{ path('conditions') }}" >{{ 'navbar.conditions'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'contact' %} active {% endif %}" href="{{ path('contact') }}" >{{ 'navbar.contact'|trans }}</a>
                        </li>
                    </ul>
                    {% if app.user %}
                            <p class=" mx-3">{{ 'navbar.hello'|trans }} {{ app.user.username }} ! </p>
                            <a class="btn btn-primary" href="{{ path('app_logout') }}">{{ 'navbar.logout'|trans }}</a>



                    {% else %}
                        <a class="nav-item btn btn-primary" href="login">{{ 'navbar.login'|trans }}</a>

                    {% endif %}
                </div>
            </div>
            {% endblock %}
        </nav>

            <div class="p-5 mb-5 bg-dark">
                <h1 class="text-white">{% block pageTitle %}Bienvenue !{% endblock %}</h1>
            </div>
        <div class="container py-5">
            {% block body %}{% endblock %}
        </div>
        <footer class="bg-dark text-white p-3">
            {% block footer %}
                <p>
                    copyright 2021
                </p>
            {% endblock %}
        </footer>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script type="text/javascript" src="../public/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
